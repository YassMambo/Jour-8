{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="container mx-auto my-10 min-h-screen flex flex-col items-center justify-center">
        <h1 class="text-4xl font-bold text-gray-800 mb-6">Contactez-moi si vous souhaitez collaborer avec moi</h1>

        <!-- Affichage des messages de succès en cas de soumission réussie -->
        {% for message in app.flashes('success') %}
            <div class="bg-green-100 text-green-800 p-4 rounded-lg mb-4 w-full max-w-md text-center">
                {{ message }}
            </div>
        {% endfor %}

        <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-6">
            {{ form_start(form) }}

            <!-- Champ Nom -->
            <div class="mb-4">
                {{ form_label(form.name, null, { 'label_attr': { 'class': 'block text-gray-700 font-semibold mb-2' } }) }}
                {{ form_widget(form.name, { 'attr': {'class': 'w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'} }) }}
                {{ form_errors(form.name) }}
            </div>

            <!-- Champ Email -->
            <div class="mb-4">
                {{ form_label(form.email, null, { 'label_attr': { 'class': 'block text-gray-700 font-semibold mb-2' } }) }}
                {{ form_widget(form.email, { 'attr': {'class': 'w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'} }) }}
                {{ form_errors(form.email) }}
            </div>

            <!-- Champ Message -->
            <div class="mb-4">
                {{ form_label(form.message, null, { 'label_attr': { 'class': 'block text-gray-700 font-semibold mb-2' } }) }}
                {{ form_widget(form.message, { 'attr': {'class': 'w-full p-3 border border-gray-300 rounded-lg h-32 focus:outline-none focus:ring-2 focus:ring-blue-500'} }) }}
                {{ form_errors(form.message) }}
            </div>

            <!-- Bouton d'envoi -->
            <div class="text-center">
                <button class="bg-blue-500 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300">
                    Envoyer
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
